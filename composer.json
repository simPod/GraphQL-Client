{
    "name": "simpod/graphql-request-factory",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SimPod\\GraphQLRequestFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\GraphQLRequestFactory\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "thecodingmachine/safe": "^1.0.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.0",
        "nyholm/psr7": "^1.2",
        "phpunit/phpunit": "^8",
        "psalm/plugin-phpunit": "^0.10.1",
        "simpod/php-coveralls-mirror": "^3.0",
        "vimeo/psalm": "^3.11"
    }
}
