{
    "name": "simpod/graphql-request-factory",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SimPod\\GraphQLRequestFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\GraphQLRequestFactory\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "thecodingmachine/safe": "0.1.16 as 1.0-beta1"
    },
    "require-dev": {
        "doctrine/coding-standard": "^7.0",
        "nyholm/psr7": "^1.2",
        "phpstan/phpstan": "0.12.2",
        "phpstan/phpstan-phpunit": "0.12.1",
        "phpstan/phpstan-strict-rules": "0.12.0",
        "phpunit/phpunit": "^8",
        "thecodingmachine/phpstan-safe-rule": "dev-master@dev"
    }
}
